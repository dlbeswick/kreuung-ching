<?xml version='1.0' encoding='utf-8'?>
<widget id="org.mamoowung.kreuungching" version="1.7" xmlns="http://www.w3.org/ns/widgets"
		xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>เครื่องฉิ่ง</name>
    <description>ฉิ่งอัตโนมัติเพื่อฝึกตนตรีไทย</description>
    <author email="dlbeswick@gmail.com">David Beswick</author>
	<content src="index.html" />
	<icon src="res/ching.png" />

	<!-- Very old Android versions' WebView doesn't have any support for the WebAudio APIs and so an
		 updatable WebView must be used. WebView is an updateable component only from 5.0.1 onwards.
		 Cordova 11's minimum SDK version (22) is also higher than this minimum. -->
	<preference name="android-minSdkVersion" value="22" />
	<preference name="permissions" value="none" />
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
